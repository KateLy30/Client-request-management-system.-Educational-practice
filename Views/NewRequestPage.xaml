<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="customer_request_accounting_system.Views.NewRequestPage"
             Title="Создание новой заявки"
             xmlns:viewModel="clr-namespace:customer_request_accounting_system.ViewModels"
             x:DataType="viewModel:NewRequestViewModel">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="Margin" Value="0, 12,0,0"/>
            </Style>
            <Style TargetType="Entry">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Margin" Value="0,5,0,0"/>
            </Style>
            <Style TargetType="Editor" >
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Margin" Value="0,5,0,0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Идентификатор клиента" />
            <Entry Text="{Binding IdClient}" ReturnCommand="{Binding TextChangedCommand}"/>
            <Entry Placeholder="ФИО клиенат" Text="{Binding NameClient}"/>

            <Label Text="Статус заявки"/>
            <Picker SelectedItem="0" SelectedIndex="{Binding Status}">
                <Picker.Items>
                    <x:String>Новая</x:String>
                </Picker.Items>
            </Picker>

            <Label Text="Описание"/>
            <Editor Text="{Binding Description}" AutoSize="TextChanges"/>

            <Label Text="Идентификатор ответственного сотрудника"/>
            <Entry Text="{Binding IdEmployee}"/>
            <Entry Text="{Binding NameEmployee}" Placeholder="ФИО ответственного сотрудника"/>
            
            <Label Text="Приоритет"/>
            <Picker SelectedIndex="{Binding PriorityRequest}">
                <Picker.Items>
                    <x:String>Низкий</x:String>
                    <x:String>Средний</x:String>
                    <x:String>Высокий</x:String>
                </Picker.Items>
            </Picker>

            <Label Text="Категория"/>
            <Entry Text="{Binding CategoryRequest}"/>

            <HorizontalStackLayout Padding="10">
                <Button Text="Ок" Command="{Binding ClickOkButtonCommand}"/>
                <Button Text="Отмена" Command="{Binding ClickCancelButtonCommand}"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
        
    </ScrollView>
</ContentPage>