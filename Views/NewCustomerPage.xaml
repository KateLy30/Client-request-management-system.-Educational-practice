<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="customer_request_accounting_system.ViewModels.NewCustomerPage"
             Title="NewCustomerPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="Margin" Value="0, 12,0,0"/>
            </Style>
            <Style TargetType="Entry">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Margin" Value="0,5,0,0"/>
            </Style>
            <Style TargetType="Editor" >
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Margin" Value="0,5,0,0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout>
            <Label Text="ФИО" />
            <Entry Text="{Binding Name}" />

            <Label Text="Номер телефона"/>
            <Entry Text="{Binding Phone}" />

            <Label Text="Почта"/>
            <Entry Text="{Binding Email}"/>

            <Label Text="Город"/>
            <Entry Text="{Binding City}"/>

            <HorizontalStackLayout Padding="10">
                <Button Text="Ок" Command="{Binding ClickOkButtonCommand}"/>
                <Button Text="Отмена" Command="{Binding ClickCancelButtonCommand}"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>

    </ScrollView>
</ContentPage>