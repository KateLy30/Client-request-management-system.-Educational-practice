<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="customer_request_accounting_system.Views.EditEmployeePage"
             Title="EditEmployeePage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="Margin" Value="0, 12,0,0"/>
            </Style>
            <Style TargetType="Entry">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Margin" Value="0,5,0,0"/>
            </Style>
            <Style TargetType="Editor" >
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Margin" Value="0,5,0,0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="3">
            <Label Text="ФИО" />
            <Entry Text="{Binding Employee.Name}" Margin="0,0,0,5"/>

            <Label Text="Номер телефона"/>
            <Entry Text="{Binding Employee.Phone}" Margin="0,0,0,5"/>

            <Label Text="Почта"/>
            <Entry Text="{Binding Employee.Email}" Margin="0,0,0,5"/>

            <Label Text="Должность"/>
            <Picker SelectedIndex="{Binding Employee.Post}" Margin="0,0,0,5">
                <Picker.Items>
                    <x:String>Младший специалист тех. поддержки</x:String>
                    <x:String>Старший специалист тех. поддержки</x:String>
                    <x:String>Администратор системы</x:String>
                    <x:String>Инженер тех. поддержки</x:String>
                    <x:String>Руководитель группы тех. поддержки</x:String>
                </Picker.Items>
            </Picker>

            <Label Text="Дата приема на работу"/>
            <Entry Text="{Binding Employee.DateOfEmployment}" Margin="0,0,0,5"/>

            <HorizontalStackLayout Padding="10" HorizontalOptions="Center" VerticalOptions="Center">
                <Button Text="Ок" Margin="10" Command="{Binding ClickOkButtonCommand}"/>
                <Button Text="Отмена" Margin="10" Command="{Binding ClickCancelButtonCommand}"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>

    </ScrollView>
</ContentPage>